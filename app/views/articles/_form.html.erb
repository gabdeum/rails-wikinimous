<div class="row justify-content-center mx-2 mt-4">
  <div class="col-12 col-md-8">
    <%= simple_form_for(article) do |f| %>
      <%= f.input :title %>
      <%= f.input :content, data: { editor: 'markdown' }, rows: 10 %>
      <%= f.submit class: 'btn btn-primary my-4' %>
    <% end %>
  </div>
</div>
