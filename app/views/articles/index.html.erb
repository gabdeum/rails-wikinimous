<div class="row justify-content-center mx-2">
  <div class="col-12 col-md-8">
    <% @articles.each do |article| %>
      <article class="mb-3 mt-4">
        <h2><%= link_to article.title, article_path(article) %></h2>
        <p><%= article.content %></p>
      </article>
    <% end %>
  </div>
</div>
